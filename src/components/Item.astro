
---
import Button from "./Button.svelte";
interface Props {
    src: string,
    title: string,
    discount: number,
    price: number,
    delprice:number,
}
const {src, title, discount, price, delprice} = Astro.props
---

<div class="rounded-lg border-2 border-gray-100 hover:border-blue-200 cursor-pointer">
						<div class="p-5 z-0 relative">
							<img src={src} alt="" class="w-[193px] h-[193px] object-contain object-center">
							<svg class="w-7 h-7 hover:fill-black absolute top-5 right-5 group" width="800px" height="800px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" clip-rule="evenodd" d="M12 6.00019C10.2006 3.90317 7.19377 3.2551 4.93923 5.17534C2.68468 7.09558 2.36727 10.3061 4.13778 12.5772C5.60984 14.4654 10.0648 18.4479 11.5249 19.7369C11.6882 19.8811 11.7699 19.9532 11.8652 19.9815C11.9483 20.0062 12.0393 20.0062 12.1225 19.9815C12.2178 19.9532 12.2994 19.8811 12.4628 19.7369C13.9229 18.4479 18.3778 14.4654 19.8499 12.5772C21.6204 10.3061 21.3417 7.07538 19.0484 5.17534C16.7551 3.2753 13.7994 3.90317 12 6.00019Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
							<!-- <span class="absolute top-10 right-12 z-50 font-roboto text-white bg-black p-1 text-xs">Add to Wish List</span> -->

						</div>
						<div class="py-3 px-4">
							<div class="flex items-center">
								<img src="/svgs/star.svg" alt="" class="w-5 h-5">
								<img src="/svgs/star.svg" alt="" class="w-5 h-5">
								<img src="/svgs/star.svg" alt="" class="w-5 h-5">
								<img src="/svgs/star.svg" alt="" class="w-5 h-5">
								<img src="/svgs/star.svg" alt="" class="w-5 h-5">
								<span class="text-blue-700 ml-3">5 (xxx)</span>
							</div>
							<h1 class="font-roboto font-bold text-base mt-5 mb-2 min-h-[3rem] hover:underline">{title}</h1>
							<span class="font-roboto text-xs block mb-3"><del>${delprice}</del> -{discount}%</span>
							<span class="font-roboto text-base font-semibold block">${price}</span>
							<Button titleButton="Add Custom" client:load/>
						</div>
					</div>